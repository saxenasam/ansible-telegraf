[global_tags]

[agent]
  interval = "15s"
  round_interval = true

  metric_buffer_limit = 10000
  metric_batch_size = 1000
  flush_buffer_when_full = true

  collection_jitter = "0s"

  flush_interval = "1s"
  flush_jitter = "0s"

  debug = false
  quiet = false


[[outputs.prometheus_client]]
  listen = ":9501"
  expiration_interval = "16s"


[[inputs.cpu]]
  percpu = true
  totalcpu = true
  fielddrop = ["time_*"]

[[inputs.disk]]

[[inputs.diskio]]

[[inputs.kernel]]

[[inputs.mem]]

[[inputs.processes]]

[[inputs.swap]]

[[inputs.system]]

[[inputs.net]]
  fielddrop = ["icmp_*", "icmpmsg_*", "tcp_*", "udp_*", "udplite_*", "ip_*"]

[[inputs.netstat]]

[[inputs.linux_sysctl_fs]]